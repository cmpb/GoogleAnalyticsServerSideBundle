<!-- src/Acme/HelloBundle/Resources/config/services.xml -->
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="google_analytics.measurement_protocol.class">Kairos\GoogleAnalyticsServerSideBundle\MeasurementProtocol</parameter>
        <parameter key="google_analytics.classic_tracker.class">Kairos\GoogleAnalyticsServerSideBundle\ClassicTracker</parameter>
        <parameter key="google_analytics_serverside.account_id" />
        <parameter key="google_analytics_serverside.domain" />
        <parameter key="google_analytics_serverside.ssl" />
    </parameters>

    <services>
        <service id="google_analytics.classic_tracker" class="%google_analytics.classic_tracker.class%">
            <argument>%google_analytics_serverside.account_id%</argument>
            <argument>%google_analytics_serverside.domain%</argument>
        </service>

        <service id="google_analytics.classic_tracker" class="%google_analytics.classic_tracker.class%">
            <argument type="service" id="container" />
            <argument>%google_analytics_serverside.account_id%</argument>
            <argument>%google_analytics_serverside.domain%</argument>
            <argument>%google_analytics_serverside.ssl%</argument>
        </service>

    </services>
</container>